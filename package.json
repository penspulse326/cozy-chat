{
  "name": "casual-meet",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "web:dev:app": "pnpm --filter @apps/web dev",
    "web:dev": "npm-run-all --parallel lib:dev web:dev:app",
    "web:build": "pnpm --filter @apps/web build",
    "web:start": "pnpm --filter @apps/web start",
    "web:lint": "pnpm --filter @apps/web lint",
    "server:dev:app": "pnpm --filter @apps/server dev",
    "server:dev": "npm-run-all --parallel lib:dev server:dev:app",
    "server:build": "pnpm --filter @apps/server build",
    "server:start": "pnpm --filter @apps/server start",
    "server:lint": "pnpm --filter @apps/server lint",
    "server:test": "pnpm --filter @apps/server test",
    "lib:dev": "pnpm --filter @packages/lib dev",
    "lib:build": "pnpm --filter @packages/lib build",
    "build": "pnpm --filter \"./apps/*\" build",
    "lint": "pnpm --filter \"./apps/*\" lint",
    "test": "pnpm --filter \"./apps/*\" test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --check"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.27.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.15.27",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/eslint-plugin": "^1.2.1",
    "eslint": "^9.27.0",
    "eslint-plugin-perfectionist": "^4.13.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vitest": "^3.1.4",
    "zod": "^4.0.10"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "socket.io": "^4.8.1"
  }
}
