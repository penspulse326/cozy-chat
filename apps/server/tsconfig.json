{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@packages/lib/*": ["../../packages/lib/*"]
    },
    "types": ["node", "vitest/globals"],
    "lib": ["es2022"],
    "noImplicitReturns": true,
    "moduleResolution": "node"
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
